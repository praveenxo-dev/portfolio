# ===============================
# Custom Error Pages
# ===============================
ErrorDocument 400 /400error.html
ErrorDocument 403 /403error.html
ErrorDocument 404 /404error.html

# ===============================
# Force HTTPS + non-www
# ===============================
RewriteEngine On

# Redirect HTTP or www → HTTPS non-www
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [L,R=301]

# ===============================
# Remove index.* for Canonical URLs
# ===============================
RewriteCond %{THE_REQUEST} /index\.(php|html?) [NC]
RewriteRule ^(.*)index\.(php|html?)$ https://%{HTTP_HOST}/$1 [L,R=301]

# ===============================
# Enforce Trailing Slash
# ===============================
# Add trailing slash if missing (except for files and root)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !\.[a-zA-Z0-9]{2,4}$ 
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1/ [L,R=301]

# ===============================
# Cache Static Files
# ===============================
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|svg)$">
  Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

# ===============================
# Security Headers
# ===============================
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"

  # Prevent MIME-type sniffing
  Header set X-Content-Type-Options "nosniff"

  # Enable XSS protection
  Header set X-XSS-Protection "1; mode=block"

  # Content Security Policy (basic, adjust as needed)
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:; frame-ancestors 'self';"

  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"

  # Strict Transport Security (HSTS) — forces HTTPS in browsers
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# ===============================
# Block Sensitive Files
# ===============================
<FilesMatch "(^\.|wp-config\.php|php\.ini|composer\.(json|lock)|package\.json|yarn\.lock)">
  Order allow,deny
  Deny from all
</FilesMatch>

# ===============================
# Disable Directory Browsing
# ===============================
Options -Indexes
